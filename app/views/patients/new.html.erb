<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_for(@patient, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>
     
      <%= f.label :firstname %>
      <%= f.text_field :first_name, class: 'form-control'  %>
      
      <%= f.label :lastname %>
      <%= f.text_field :last_name, class: 'form-control' %>
      
      <%= f.label :gender %>
      <%= f.select(:gender, (['Male', 'Female']),{},{:class => 'form-control'})%>
      
      <%= f.label :phone %>
      <%= f.text_field :phoneNo, class: 'form-control' %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control'  %>

      <%= f.label :password %>
      <%= f.password_field :password , class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation , class: 'form-control' %>
           
      <%= f.label :insurance %>
      <%= f.select(:insurance, (['Irish Health Insurance', 'Irish Life Health','123.ie Insurance','AIG Ireland','Vhi Healthcare','Laya Healthcare']),{},{:class => 'form-control'})%>
      
      <%= f.label :address %>
      <%= f.text_area :address, :cols => 30, :rows => 10,class: 'form-control' %>
      
      <%=label_tag "patient_dob", "DOB"%>
      <%=date_select "patient", "dob", { start_year: 100.years.ago.year, end_year: Date.today.year, default: Date.today},{:class => 'form-control'}%>

      <%= f.submit "Create account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
