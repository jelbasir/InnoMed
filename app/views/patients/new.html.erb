<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_for @patient do |f| %>
        <% if @patient.errors.any? %>
        <div class="error_messages">
          <h2><%= pluralize(@patient.errors.count, "error") %> cannot save this suscription :</h2>
          <ul>
          <% @patient.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
            </ul>
            </div>
            <% end %>
            
      <%= render 'shared/error_messages' %>
     
      <%= f.label :firstname %>
      <%= f.text_field :first_name, class: 'form-control'  %>
      
      <%= f.label :lastname %>
      <%= f.text_field :last_name, class: 'form-control' %>
      
      <%= f.label :gender %>
      <%= f.select(:gender, (['Male', 'Female']),{},{:class => 'form-control'})%>
      
      <%= f.label :phone %>
      <%= f.text_field :phoneNo, class: 'form-control' %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control'  %>

      <%= f.label :password %>
      <%= f.password_field :password , class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation , class: 'form-control' %>
           
      <%= f.label :insurance %>
      <%= f.select(:insurance, (['Irish Health Insurance', 'Irish Life Health','123.ie Insurance','AIG Ireland','Vhi Healthcare','Laya Healthcare']),{},{:class => 'form-control'})%>
      
      <%= f.label :address %>
      <%= f.text_area :address, :cols => 30, :rows => 10,class: 'form-control' %>
      
      <%=label_tag "patient_dob", "DOB"%>
      <%=date_select "patient", "dob", { start_year: 100.years.ago.year, end_year: Date.today.year, default: Date.today},{:class => 'form-control'}%>

      
      <div class="field">
      <%= label_tag :card_number, "Credit Card Number" %>
      <%= text_field_tag :card_number, nil, name: nil %>
      </div>
    
      <div class="field">
      <%= label_tag :card_code, "security Code on card(cvv)" %>
      <%= text_field_tag :card_code, nil, name: nil %>
      </div>
    
      <div class="field">
      <%= label_tag :card_month, "Card Expiration" %>
      <%= select_month nil, {add_month_numbers: true},{name: nil, id: "card_month"} %>
      <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15},{name: nil, id: "card_year"} %>
      </div>
    
      <div id="stripe_error">
        <noscript>please enable java script </noscript>
      </div>


     <div class="actions">   
      <%= f.submit "Create account", class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
