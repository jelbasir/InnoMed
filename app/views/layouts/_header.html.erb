<header class="navbar navbar-fixed-top myNavbar">

  <div class="container-fluid">
        <div class="navbar-header">
            <%= link_to "Innomed Connecting Health", root_path, id: "logo" %>
        </div> 
      <ul class="nav navbar-nav navbar-right">

         <li><%= link_to "Home",    root_path %></li>
        

         <% if logged_in? %>
           <% if current_user.user_type == "patient" %>
            <li><%= link_to "Doctors",    doctors_path %></li>
              <li><%= link_to "Appointments", patient_appointments_path(current_user.id) %></li>

                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Patient <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                          <li><%= link_to "Profile", patient_path(@current_patient.id) %></li>
                          <!--<li><%= link_to "Settings", '#' %></li>-->
                          <li class="divider"></li>
                          <li>
                            <%= link_to "Log out", logout_path, method: :delete %>
                          </li>
                        </ul>
                      </li>
            <% else %>
              <li><%= link_to "Appointments", doctor_appointments_path(current_user.id) %></li>
  
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Doctor <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                          <li><%= link_to "Profile", doctor_path(@current_doctor.id)%></li>
                          <!--<li><%= link_to "Settings", '#' %></li>-->
                          <li class="divider"></li>
                           <li>
                            <%= link_to "Log out", logout_path, method: :delete %>
                          </li>
                        </ul>
                      </li>
            <% end %>
        <% else %>
          <li><%= link_to " Log in", login_path, class: " glyphicon glyphicon-log-in"  %></li>
          <li><%= link_to " Sign up - Patient!", signup_path, class: " glyphicon glyphicon-user" %></li>
          <li><%= link_to " Sign up - Doctor!", signup_doctors_path, class: " glyphicon glyphicon-user" %></li>
          
        <% end %>
  </div>
</header> 

        
