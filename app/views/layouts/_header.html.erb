<header class="navbar navbar-fixed-top myNavbar">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "Innomed Connecting Health", root_path, id: "logo" %>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Doctors", doctors_path %></li>
      <li><%= link_to "Chat", rooms_path %></li>

      <% if current_patient %>
        <li><%= link_to "Appointments", patient_appointments_path(current_patient.id) %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Patient <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_patient %></li>
            <li><%= link_to "Settings", '#' %></li>
            <li class="divider"></li>
            <li>
              <%= link_to "Log out", destroy_patient_session_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to "Log in", new_patient_session_path, class: "glyphicon glyphicon-log-in"  %></li>
        <li><%= link_to "Sign up!", new_patient_registration_path, class: "glyphicon glyphicon-user" %></li>
      <% end %>
    </ul>
  </div>
</header>


