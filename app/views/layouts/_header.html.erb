<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Innomed Connecting Health", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
         <li><%= link_to "Home",    root_path %></li>
        <li><%= link_to "Help",    help_path %></li>
        <li><%= link_to "Doctors",    doctors_path %></li>
         <% if logged_in? %>
          <li><%= link_to "Appointments", patient_appointments_path(current_patient.id) %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Patient <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_patient %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>